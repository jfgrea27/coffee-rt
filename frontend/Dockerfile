FROM node:20-alpine AS builder

WORKDIR /app

COPY package.json ./

RUN npm install

COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/templates/default.conf.template

ENV API_HOST=cafe-order-api
ENV API_PORT=8005

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
